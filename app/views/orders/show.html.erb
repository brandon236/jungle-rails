<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <br>
    <h4>Order summary:</h4>

    <% @order.line_items.each do |item| %>

      <div id="order_name"><%= item.product.name %></div>
      <div> <%= item.product.description %> </div>
      <img src="<%= item.product.image %>"</img>
      <div>Price: <%= number_to_currency(item.total_price_cents/100) %></<div>
      <div> Quantity: <%= item.quantity %> </div>
      <div> Item total: <%= number_to_currency((@order.total_cents)/100) %> </div>
      <div>Email: <%= @order.email %></div>
      <div>Final amount: <%= number_to_currency(@order.total_cents/100) %></div>
      <br>
    <% end %>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
